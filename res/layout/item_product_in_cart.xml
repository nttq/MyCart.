<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/option_background"
    android:id="@+id/product_in_cart">

    <ImageView
        android:id="@+id/imvPInCart"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tvNamePInCart"
        style="@style/option_text"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/imvPInCart"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tvPriceInCart"
        style="@style/option_price"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/tvNamePInCart"
        app:layout_constraintTop_toBottomOf="@id/tvNamePInCart"/>
    <TextView

        android:id="@+id/tvSumPrice"
        style="@style/option_price"
        app:layout_constraintStart_toEndOf="@id/tvQuantity"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
        android:id="@+id/plusBtn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/plus"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tvNamePInCart"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/option_price"
        app:layout_constraintTop_toBottomOf="@id/plusBtn"
        app:layout_constraintBottom_toTopOf="@id/minusBtn"
        app:layout_constraintStart_toStartOf="@id/plusBtn"
        app:layout_constraintEnd_toEndOf="@id/plusBtn"/>
    <ImageButton
        android:id="@+id/minusBtn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/minus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/plusBtn"
        app:layout_constraintEnd_toEndOf="@id/plusBtn"/>
</android.support.constraint.ConstraintLayout>